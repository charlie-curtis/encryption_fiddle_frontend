{{#modal-dialog
  targetAttachment="center"
  translucentOverlay=true}}
  <div class="dataEntry">Message</div>
  <div class="errorText">{{errorText}}</div>
  <div class="textArea">{{textarea value=container.inputText cols="80" rows="10"}}</div>
  <div class="container-fluid">
    <div class="menuOptions">
      <button class="btn btn-primary btn-lg" {{action "encryptText"}}>Encrypt Message</button>
      <button class="btn btn-primary btn-lg" {{action "decryptText"}}>Decrypt Message</button>
    </div>
  </div>
{{transition-component container=container}}
{{/modal-dialog}}
