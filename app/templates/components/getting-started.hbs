
<button {{action "toggleModal"}}>Reset</button>
<br>
<br>

{{#if isShowingModal}}
  {{#modal-dialog onClose="toggleModal"
                  targetAttachment="center"
                  translucentOverlay=true}}
                  {{#each cipherOptions as |cipherOption|}}
                    <button {{action "clearStateAndSetCipher" cipherOption.name}}>{{cipherOption.longName}}</button>
                    <br>
                  {{/each}}
  {{/modal-dialog}}
{{/if}}


